<script type="text/javascript">
var countUpValue = 0;
  function member(){
    const memberID = document.getElementById("member1");
    let IntoMember = "shift" + (countUpValue + 1)
    const InnerHTMLpoint = document.getElementById(IntoMember);
    InnerHTMLpoint.innerHTML = `${memberID.value}`;
    for (i = 30; i > 0; i--) {
      InnerHTMLpoint.insertAdjacentHTML('afterend', `<td><select id="shifts-${memberID.value}-${i}"><option>A</option><option>B</option><option>C</option><option>D</option><option>A(当)</option><option>A/休</option><option>休</option><option>有休</option><option >特休</option></select></td>`);
    };
    document.getElementById('member1').value = ''
    countUpValue++;
    document.getElementById("count").innerHTML = `${countUpValue}人追加/12人まで`;
  };
</script>

